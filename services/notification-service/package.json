{
  "name": "@lms/notification-service",
  "version": "2.0.0",
  "description": "Multi-channel notification service with EMAIL-Dispatcher integration and web push notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "docker:build": "docker build -t lms/notification-service .",
    "docker:run": "docker run -p 3006:3006 lms/notification-service"
  },
  "keywords": [
    "notifications",
    "email",
    "push-notifications",
    "templates",
    "multi-channel",
    "lms",
    "microservice"
  ],
  "author": "LMS Platform Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/node": "^20.11.5",
    "axios": "^1.6.7",
    "bullmq": "^5.1.9",
    "fastify": "^4.25.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
