{
  "name": "lms-api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for LMS Microservices",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/rate-limit": "^8.0.1",
    "@fastify/swagger": "^8.12.1",
